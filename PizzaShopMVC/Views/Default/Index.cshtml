@model IEnumerable<PizzaShopMVC.Models.pizza>

@{
    ViewBag.Title = "Pizza Shop";
}
<body style="background-image:url(https://www.wallpapersbyte.com/wp-content/uploads/2015/09/Pizza-Food-Cheese-Pieces-WallpapersByte-com-1366x768.jpg);">
    <div class="jumbotron">
        <h2>Pizza Shop</h2>
        <h4>B_id 1=No Sauce</h4>

        <h4>B_id 2=Tomato Sauce</h4>
        <h4>B_id 3=BBQ Sauce</h4>
        <h4>B_id 4=Apricot Sauce</h4>
        <h4>B_id 5=Peri Peri Sauce</h4>


        <p>
            @Html.ActionLink("Add Order", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.B_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.onions)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.capsicum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.chicken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.beef)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.B_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.onions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.capsicum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.chicken)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.beef)
                    </td>
                    <td>
                        @Html.ActionLink("Edit Order", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("See Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Complete Order", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        </div>
</body>
